@{
    Layout = "_Layout";
}
<!--Bootstrap Datatable-->
<link rel="stylesheet" type="text/css" href="~/Template/app-assets/vendors/css/tables/datatable/dataTables.bootstrap5.min.css">
<link rel="stylesheet" type="text/css" href="~/Template/app-assets/vendors/css/tables/datatable/responsive.bootstrap5.min.css">
<link rel="stylesheet" type="text/css" href="~/Template/app-assets/vendors/css/tables/datatable/buttons.bootstrap5.min.css">
<link rel="stylesheet" type="text/css" href="~/Template/app-assets/vendors/css/tables/datatable/rowGroup.bootstrap5.min.css">
@*<link rel="stylesheet" type="text/css" href="~/Template/app-assets/vendors/css/pickers/flatpickr/flatpickr.min.css">*@

<link rel="stylesheet" type="text/css" href="~/Template/app-assets/vendors/css/forms/select/select2.min.css">
<link href="~/css/jquery.loadingmodal.css" rel="stylesheet" />

<link rel="stylesheet" type="text/css" href="~/Template/app-assets/css/pages/app-invoice.css">

<!-- BEGIN: Content-->
<!-- Basic table -->
<section id="basic-datatable">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">LISTADO DE ASIGNACIONES</h4>
                    <button type="button" id="addAsignacion" name="addAsignacion" class="btn btn-outline-success" data-bs-toggle="modal" data-bs-target="#modalAgregarAsignacion" onclick="ResetModal()">
                        Nueva Asignación
                    </button>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table zero-configuration" id="asignation-table">
                                <thead>
                                    <tr>
                                        <th>IdServicio</th>
                                        <th class="text-truncate">Cliente</th>
                                        <th class="text-truncate">Técnico</th>
                                        <th class="text-truncate">Contrata</th>
                                        <th>Fecha</th>
                                        <th class="text-truncate">Ingeniero</th>
                                        <th class="cell-fit">Actions</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ Basic table -->

<!-- Modal Agregar Asignacion -->
<div class="modal fade fade text-start" id="modalAgregarAsignacion" tabindex="-1" role="dialog" aria-labelledby="myModalLabel33" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title" id="myModalLabel33"> Agregar Asignación </h4>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" onclick="ResetModal()" id="closeModalAgregarAsignacion">
                </button>
            </div>
            <div class="modal-body">
                <form id="form-asignacion" name="form-asignacion" method="post">
                    <div class="modal-body">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="col-md-12">
                                    <label>Id Servicio: </label>
                                    <div class="mb-1">
                                        <input type="text" maxlength="100" id="idServicio" name="idServicio" placeholder="Id del Servicio" class="form-control">
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Cliente: </label>
                                    <div class="mb-1">
                                        <select class="form-control col-md-12" id="selectCliente" name="selectCliente">
                                            <option value="">Seleccione una opción</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label>Técnico: </label>
                                    <div class="mb-1">
                                        <select class="form-control col-md-12" id="selectTecnico" name="selectTecnico">
                                            <option value="">Seleccione una opción</option>
                                        </select>
                                    </div>
                                </div> 
                            </div>
                            <div class="row">
                                <div class="col-md-6">
                                    <label>Contrata: </label>
                                    <div class="mb-1">
                                        <select class="form-control col-md-12" id="selectContratista" name="selectContratista">
                                            <option value="">Seleccione una opción</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <label>Ingeniero: </label>
                                    <div class="mb-1">
                                        <select class="form-control col-md-12" id="selectIngeniero" name="selectIngeniero">
                                            <option value="">Seleccione una opción</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="submit" class="btn btn-primary" id="btnGuardarServicio">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<!-- Modal Agregar Asignacion Fin -->

<!-- END: Content-->
@section Scripts {
    <!-- Bootstrap datatable -->
    <script src="~/Template/app-assets/vendors/js/tables/datatable/jquery.dataTables.min.js"></script>
    <script src="~/Template/app-assets/vendors/js/tables/datatable/dataTables.bootstrap5.min.js"></script>
    <script src="~/Template/app-assets/vendors/js/tables/datatable/dataTables.responsive.min.js"></script>
    <script src="~/Template/app-assets/vendors/js/tables/datatable/responsive.bootstrap5.min.js"></script>
    <script src="~/Template/app-assets/vendors/js/tables/datatable/datatables.checkboxes.min.js"></script>
    <script src="~/Template/app-assets/vendors/js/tables/datatable/datatables.buttons.min.js"></script>
    <script src="~/Template/app-assets/vendors/js/tables/datatable/buttons.html5.min.js"></script>
    <script src="~/Template/app-assets/vendors/js/tables/datatable/buttons.print.min.js"></script>
    <script src="~/Template/app-assets/vendors/js/tables/datatable/dataTables.rowGroup.min.js"></script>
    <!-- end Bootstrap datatable -->
    <script src="~/Template/app-assets/vendors/js/forms/select/select2.full.min.js"></script>
    <script src="~/Template/app-assets/vendors/js/forms/validation/jquery.validate.min.js"></script>
    <!-- Mensaje cargando-->
    <script src="~/js/jquery.loadingModal.js"></script>
    <!-- Alertas-->
    <script src="~/js/sweetalert2.all.min.js"></script>

    <!-- Agregar page-->
    <script src="~/Template/app-assets/vendors/js/forms/repeater/jquery.repeater.min.js"></script>
    <!-- END: Page Vendor JS-->
    <script src="~/Template/app-assets/vendors/js/extensions/moment.min.js"></script>

    <script>

        //Cargar Pagina
        $(document).ready(function () {

            $('#asignation-table').DataTable({
                "language": { "url": "https://cdn.datatables.net/plug-ins/1.12.1/i18n/es-ES.json" },
                "dom": 'rtip',
                "pageLength": 5,
                "ajax": {
                    "url": "@Url.Action("ListaAsignaciones", "Inspection")",
                    "type": "GET",
                    "dataType": "json"
                },
                "order": [[0, "desc"]],
                columns: [
                    { "data": "idServicioNuevo" },
                    { "data": "cliente" },
                    { "data": "tecnico" },
                    { "data": "contrata" },
                    {
                        "render": function (data, type, row) {
                            return moment(row.fecha).format('DD-MM-YYYY');
                        }
                    },
                    { "data": "ingeniero" },
                    {
                        'defaultContent': null,
                        'render': function (data, type, row) {
                            return '<div class="d-flex"> <button type="button" class="btn btn-icon btn-danger mx-1" id="' + row.idServicioNuevo + '" onclick="eliminarServicio(this.id)" data-toggle="tooltip" data-placement="left" title="Eliminar"> <i data-feather="trash"></i></i> </button> </div>'
                        }
                    }
                ],
                drawCallback: function (settings) {
                    feather.replace();
                }
            });

            cargarSelect();
        });

        function detalleInspeccion(id) {
            window.location.href = "/Inspection/InspectionDetalle?id=" + id;
        }

        function cargarSelect() {
            //Clientes
            $.get("@Url.Action("selectClientes","Indicadores")", function (data) {

                $("#selectCliente").empty();

                $.each(data, function (index, row) {
                    $("#selectCliente").append("<option value='" + row.idCliente + "'>" + row.nombre + "</option>");

                });
                $("#selectCliente").append("<option selected disabled hidden value='0'>" + "Por Favor Seleccione cliente" + "</option>");
            });

            //Tecnicos
            $.get("@Url.Action("selectTecnicos","Inspection")", function (data) {

                $("#selectTecnico").empty();

                $.each(data, function (index, row) {
                    $("#selectTecnico").append("<option value='" + row.idTecnico + "'>" + row.nombre + "</option>");

                });
                $("#selectTecnico").append("<option selected disabled hidden value='0'>" + "Por Favor Seleccione tecnico" + "</option>");
            });

            //Contratistas
            $.get("@Url.Action("selectContratistas","Inspection")", function (data) {

                $("#selectContratista").empty();

                $.each(data, function (index, row) {
                    $("#selectContratista").append("<option value='" + row.idContrata + "'>" + row.nombreContrata + "</option>");

                });
                $("#selectContratista").append("<option selected disabled hidden value='0'>" + "Por Favor Seleccione contratista" + "</option>");
            });

            //Contratistas
            $.get("@Url.Action("selectIngenieros","Inspection")", function (data) {

                $("#selectIngeniero").empty();

                $.each(data, function (index, row) {
                    $("#selectIngeniero").append("<option value='" + row.idIngeniero + "'>" + row.nombre + "</option>");

                });
                $("#selectIngeniero").append("<option selected disabled hidden value='0'>" + "Por Favor Seleccione ingeniero" + "</option>");
            });
        }

        function ResetModal() {
            var validator = $("#modalAgregarAsignacion").validate();
            validator.resetForm();
            $("#idServicio").val("");
            $("#selectCliente").val(0);
            $("#selectTecnico").val(0);
            $("#selectContratista").val(0);
            $("#selectIngeniero").val(0);
        }

        //Validación de formulario
        $("#form-asignacion").validate({
            rules: {
                idServicio: "required",
                selectCliente: "required",
                selectTecnico: "required",
                selectContratista: "required",
                selectIngeniero: "required"
            },
            messages: {
                idServicio: "Ingrese Id para el servicio",
                selectCliente: "Seleccione Cliente",
                selectTecnico: "Seleccione Tecnico",
                selectContratista: "Seleccione Contratista",
                selectIngeniero: "Seleccione Ingeniero"
            },
            submitHandler: function (form) {
                event.preventDefault();
                agregarAsignacion();
            }
        });

        function agregarAsignacion() {
            //mensaje carga
            $('body').loadingModal({
                position: 'auto',
                text: 'Cargando',
                color: '#fff',
                opacity: '0.7',
                backgrundColor: 'rgb(0,0,0)',
                animation: 'doubleBounce'
            });

            //objeto
            let idServicio = $("#idServicio").val();
            let idCliente = $("#selectCliente").val();
            let idTecnico = $("#selectTecnico").val();
            let idContratista = $("#selectContratista").val();
            let idIngeniero = $("#selectIngeniero").val();

            let parametros = JSON.stringify({
                IdServicioNuevo: idServicio,
                IdCliente: idCliente,
                IdTecnico: idTecnico,
                IdContrata: idContratista,
                IdIngeniero: idIngeniero
            });

            $.ajax({
                url: "@Url.Action("CrearAsignacion", "Inspection")",
                type: "POST",
                contentType: "application/json; charset=utf-8",
                data: parametros,
                dataType: "json",
                success: function (result) {
                    //show Alert
                    Swal.fire({
                        title: 'Crear Asignación',
                        text: result.mensaje,
                        icon: result.tipo
                    })
                    $('#closeModalAgregarAsignacion').trigger("click");

                    //reload table
                    var table = $('#asignation-table').DataTable();
                    table.ajax.reload();
                    //hidemodal loading
                    $('body').loadingModal('destroy');
                },
                error: function (result) {
                    Swal.fire({
                        title: 'Crear Asignación',
                        text: result.mensaje,
                        icon: result.tipo
                    })
                    //hidemodal loading
                    $('body').loadingModal('destroy');
                }
            });
        }

        function eliminarServicio(id) {
            Swal.fire({
                title: "¿Eliminar Asignación?",
                text: "¿Está seguro que desea eliminar esta Asignación? con Id " + id +", este proceso es irreversible",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Si, Eliminar',
                cancelButtonText: 'Cancelar'
            }).then((result) => {
                if (result.isConfirmed) {
                    //Modal Loading
                    $('body').loadingModal({
                        position: 'auto',
                        text: 'Cargando',
                        color: '#fff',
                        opacity: '0.7',
                        backgrundColor: 'rgb(0,0,0)',
                        animation: 'doubleBounce'
                    });

                    $.ajax({
                        url: "@Url.Action("EliminarAsignacion","Inspection")",
                        type: "POST",
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        data: JSON.stringify({ IdServicioNuevo: id }),
                        success: function (result) {
                            //show Alert
                            Swal.fire({
                                title: 'ELIMINAR Asignacion',
                                text: result.mensaje,
                                icon: result.tipo
                            })

                            //reload table
                            var table = $('#asignation-table').DataTable();
                            table.ajax.reload();
                            //hidemodal loading
                            $('body').loadingModal('destroy');
                        },
                        error: function (result) {
                            //show Alert
                            Swal.fire({
                                title: "HA OCURRIDO UN ERROR",
                                text: "Error en el Servidor" + result.responseText,
                                icon: "error"
                            })
                            //hidemodal loading
                            $('body').loadingModal('destroy');

                        }
                    });

                }
            });
        }

    </script>
}
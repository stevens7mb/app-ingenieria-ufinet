<!-- Basic table -->
<section id="basic-datatable">
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Inspeccion @Model.datosIndividuales.IdServicioNuevo</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label for="IdInspeccionTrabajo">Id Inspeccion Trabajo</label>
                                <input type="text" class="form-control" id="IdInspeccionTrabajo" value="@Model.datosIndividuales.IdInspeccionTrabajo" disabled>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="IdServicioNuevo">Id Servicio</label>
                                <input type="text" class="form-control" id="IdServicioNuevo" value="@Model.datosIndividuales.IdServicioNuevo" disabled>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="Contrata">Contrata</label>
                                <input type="text" class="form-control" id="Contrata" value="@Model.datosIndividuales.Contrata" disabled>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="Tecnico">Tecnico</label>
                                <input type="text" class="form-control" id="Tecnico" value="@Model.datosIndividuales.Tecnico" disabled>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-md-3">
                                <label for="Ingeniero">Ingeniero</label>
                                <input type="text" class="form-control" id="Ingeniero" value="@Model.datosIndividuales.Ingeniero" disabled>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="FechaInspeccion">Fecha Inspeccion</label>
                                <input type="text" class="form-control" id="FechaInspeccion" value="@Model.datosIndividuales.FechaInspeccion" disabled>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="UsuarioInspeccion">Usuario Inspeccion</label>
                                <input type="text" class="form-control" id="UsuarioInspeccion" value="@Model.datosIndividuales.UsuarioInspeccion" disabled>
                            </div>
                            <div class="form-group col-md-3">
                                <label for="Estado">Estado</label>
                                <input type="text" class="form-control" id="Estado" value="@Model.datosIndividuales.Estado" disabled>
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>

        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h4 class="card-title">Tareas y Respuestas</h4>
                </div>
                <div class="card-content">
                    <div class="card-body">
                        @foreach (var categoria in Model.categorias)
                        {
                            <h4>@categoria.Categoria</h4>
                            <div class="row">
                                @foreach (var (pregunta, correlativo) in categoria.preguntas.Select((p, i) => (p, i + 1)))
                                {
                                    <div class="col-md-8">
                                        <div class="form-group">
                                            <label>@correlativo - @pregunta.Tarea</label>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label style="font-weight:bold">@pregunta.Respuesta</label>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <hr />
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--/ Basic table -->

                            <div class="card-content">
                                <div class="card-body">
                                    <div class="col-md-12 text-center">
                                        <button type="button" class="btn btn-primary col-md-3">Calcular</button>
                                    </div>
                                    <table class="datatables-basic table" id="pi-table-herraje">
                                        <thead>
                                            <tr>
                                                <th>ID Tipo Herraje</th>
                                                <th class="text-truncate">Tipo Herraje</th>
                                                <th>Precio</th>
                                                <th>Tipo Bobina FO</th>
                                            </tr>
                                        </thead>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer mb-1">
                <div class="mb-1 d-flex flex-wrap mt-2">
                    <button type="button" class="btn btn-primary me-1" data-bs-dismiss="modal">Agregar</button>
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancelar</button>
                </div>
            </div>
        </div>
    </div>
</div>
